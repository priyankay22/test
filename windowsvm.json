{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vm-name":{
          "type":"string"
      },
  
      "vmsize": {
        "type": "string"
      },
      "adminUsername": {
        "type": "string"
        
      },
      "authenticationType": {
        "type": "string"
      },
      "adminPassword": {
        "type": "securestring"
      },
      "location": {
        "type": "string"
      },
       "linux_publisher":{
          "type": "string"
      },
      "linux_imageOffer": {
        "type": "string"
      },
      "linuxsku": {
        "type": "string"
      },
      "storageAccountEndpoint":{
        "type": "string"
      },
      "linux_nic":{
        "type": "string"
      },
      "apiVersion": {
        "type": "string"
      }
    },
    "variables": {
      
    },
    "resources": [
    {
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[parameters('vm-name')]",
        "location": "[parameters('location')]",
        "apiVersion": "[parameters('apiVersion')]",
        "properties": {
          "hardwareProfile": {
            "vmSize": "[parameters('vmsize')]"
          },
          "osProfile": {
            "computerName": "[parameters('vm-name')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
            
          },
          "storageProfile": {
            "imageReference": {
                "publisher":"[parameters('linux_publisher')]",
                "offer":"[parameters('linux_imageOffer')]",
                "sku":"[parameters('linuxsku')]",
                "version":"latest"
            },
            "osDisk": {
              "name": "[concat(parameters('vm-name'),'_OSDisk')]",
              "caching": "ReadWrite",
              "createOption": "FromImage",
              "managedDisk":{
                "storageAccountType":"Standard_LRS"
              }
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('linux_nic'))]"
              }
            ]
          },
          "diagnosticsProfile": {
            "bootDiagnostics": {
              "enabled": true,
              "storageUri": "[parameters('storageAccountEndpoint')]"
            }
          }
        }
      }
   
    ]
  }
