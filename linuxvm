    "virtualNetworkName": "[concat(parameters('vm-name'), 'vnet')]",
    "subnetName": "[concat(parameters('vm-name'), 'subnet')]",
    "publicIPAddressName": "[concat(parameters('vm-name'), 'pip')]",
    "nicName": "[concat(parameters('vm-name'), 'nic')]",
    "ipConfigName": "[concat(parameters('vm-name'), 'ipconfig')]",
    "osType": {
      "publisher": "Canonical",
